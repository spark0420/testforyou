{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "debug",
      "type": "shell",
      "command": "",
      "args": ["g++", "-g", "${relativeFile}", "-o", "a.exe"]
    },
    {
      "label": "Compile and run",
      "type": "shell",
      "command": "",
      "args": [
        "g++",
        "${relativeFile}",
        "-g",
        "-lSDL2",
        "-lSDL2_image",
        "-lSDL2_ttf",
        "-lSDL2_gfx",
        "-lpthread",
        "-o",
        "${fileBasenameNoExtension}.out",
        "&&",
        "clear",
        "&&",
        "./${fileBasenameNoExtension}.out"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "severity": 4,
          "message": 5
        }
      }
    },
    {
      "type": "shell",
      "label": "cpp build active file",
      "command": "/usr/bin/cpp",
      "args": [
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}"
      ],
      "options": {
        "cwd": "/usr/bin"
      },
      "problemMatcher": ["$gcc"],
      "group": "build"
    }
  ]
}
